<mah:MetroWindow x:Class="SortingHat.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortingHat.UI"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="300">
    <Grid>
       <StackPanel Margin="5">
           <Label>Application Themes</Label>
           <ComboBox Name="ApplicationTheme" SelectionChanged="OnThemeChanged"></ComboBox>
            <Label>Accent Color</Label>
            <ComboBox Name="AccentColor" SelectionChanged="OnAccentChanged"></ComboBox>
       </StackPanel>
    </Grid>
</mah:MetroWindow>
