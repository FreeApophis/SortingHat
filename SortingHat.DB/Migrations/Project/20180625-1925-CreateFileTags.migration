/* Create TagsFiles */

CREATE TABLE `FileTags` (
    `Id`                        INTEGER PRIMARY KEY AUTOINCREMENT,
    `TagId`                     INTEGER NULL,
    `FileId`                    INTEGER NOT NULL,

    FOREIGN KEY(`TagId`)        REFERENCES `Tags`(`Id`),
    FOREIGN KEY(`FileId`)       REFERENCES `Files`(`Id`),
    UNIQUE (TagId, FileId)      ON CONFLICT REPLACE
);

