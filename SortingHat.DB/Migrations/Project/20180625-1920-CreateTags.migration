/* Create Tags */

CREATE TABLE `Tags` (
    `Id`                        INTEGER PRIMARY KEY AUTOINCREMENT,
    `ParentId`                  INTEGER NULL,
    `Name`                      VARCHAR (255),

    FOREIGN KEY(`ParentId`)     REFERENCES `Tags`(`Id`)
);

CREATE INDEX TagsParentIndex
ON Tags (ParentId); 

CREATE INDEX TagsNameIndex
ON Tags (Name); 