/* Create Files */

CREATE TABLE IF NOT EXISTS `Files` (
    `ID`                        INTEGER PRIMARY KEY AUTOINCREMENT,
    `Hash`                      VARCHAR ( 128 ) UNIQUE,
    `Size`                      INTEGER NOT NULL,
    `CreatedAt`                 TIMESTAMP NOT NULL
);

CREATE INDEX FilesSHA1Index
ON Files (Hash); 

CREATE INDEX FilesCreatedAtIndex
ON Files (CreatedAt); 